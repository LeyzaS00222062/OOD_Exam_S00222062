<Window x:Class="OOD_Exam_S00222062.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOD_Exam_S00222062"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Patients" FontSize="28" HorizontalAlignment="Left" Margin="50,0,0,0"></TextBlock>
        <TextBlock x:Name="patientTxtBlck" Grid.Row="5" Grid.Column="2" Margin="50,0,0,50" Height="300" Width="200" IsEnabled="True" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>

        <TextBlock Text="Patient Details" FontSize="28" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,0,0,0"></TextBlock>
        <Grid>
            <TextBox x:Name="firstNameTxtBox" Margin="400,67,300,0" Height="20" Width="100" IsEnabled="True" VerticalAlignment="Top" Text="Enter First Name"/>
            <TextBox x:Name="lastNameTxtBox" Margin="529,67,171,0" Height="20" Width="100" IsEnabled="True" VerticalAlignment="Top" Text="Enter Surname" />

            <TextBox x:Name="phoneNumberTxtBox" Text="Enter Phone Number" Width="120" Height="20" Margin="400,130,280,283"/>
            <DatePicker x:Name="dobCalender" Margin="529,126,0,0" Width="200" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Button Content="Add" Click="AddPatientname" Width="100" Height="20" Margin="661,67,39,347"></Button>
        </Grid>
        <TextBlock Text="Appointments" FontSize="28" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="400,217,0,0"></TextBlock>
        <Grid>
            <TextBlock x:Name="appointmentsTxtBox" Width="300" Height="160" Margin="400,234,200,0"></TextBlock>
            <Button Content="Add" Click="AddNewAppointment" Width="60" Height="20" Margin="690,266,10,148"></Button>
            <Button Content="Edit" Click="DeleteAppointment" Width="60" Height="20" Margin="690,295,10,119"></Button>
        </Grid>

    </Grid>
</Window>
